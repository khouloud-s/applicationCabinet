<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Appointement.
    -->
    <changeSet id="20220520084444-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="medecin_id"
                                 baseTableName="appointement"
                                 constraintName="fk_appointement__medecin_id"
                                 referencedColumnNames="id"
                                 referencedTableName="medecin"/>

        <addForeignKeyConstraint baseColumnNames="patient_id"
                                 baseTableName="appointement"
                                 constraintName="fk_appointement__patient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="patient"/>

        <addForeignKeyConstraint baseColumnNames="shift_horaire_id"
                                 baseTableName="appointement"
                                 constraintName="fk_appointement__shift_horaire_id"
                                 referencedColumnNames="id"
                                 referencedTableName="shifthoraire"/>
    </changeSet>
</databaseChangeLog>
